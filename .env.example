# Environment variables for Universal Data Extractor + Analyzer

# FastAPI Project Settings
PROJECT_NAME="Universal Data Extractor + Analyzer"
API_V1_STR="/api/v1"

# PostgreSQL Database
POSTGRES_SERVER=localhost
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=udea_db
# SQLALCHEMY_DATABASE_URI will be constructed from these or use sqlite if not all are set

# MinIO Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=udea-uploads
MINIO_USE_SSL=False

# Celery Task Queue (using Redis as broker and backend)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# AI API Keys
OPENAI_API_KEY="your_openai_api_key_here"
GEMINI_API_KEY="your_gemini_api_key_here"
AI_PROVIDER="gemini"  # Options: "openai", "gemini"

# Logging Configuration
LOG_LEVEL=INFO # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Development specific settings (optional)
# RELOAD_UVICORN=True

